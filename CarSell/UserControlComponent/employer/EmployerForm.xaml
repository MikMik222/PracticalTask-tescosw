<UserControl x:Class="CarSell.UserControlComponent.EmployerForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSell.UserControlComponent" >

    <StackPanel Margin="10">
        <TextBlock Text="Název společnosti:" FontSize="14" Margin="0,5"/>
        <TextBox x:Name="NameTextBox" Margin="0,5" Width="Auto"/>

        <TextBlock Text="Sídlo společnosti:" FontSize="14" Margin="0,5"/>
        <TextBox x:Name="OfficeTextBox" Margin="0,5" Width="Auto"/>

        <TextBlock Text="Kontakt společnosti:" FontSize="14" Margin="0,5"/>
        <TextBox x:Name="ContactTextBox" Margin="0,5" Width="Auto"/>
    </StackPanel>
</UserControl>
