<UserControl x:Class="CarSell.UserControlComponent.SalesForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSell.UserControlComponent"  >

    <StackPanel Margin="10">
        <TextBlock Text="Kupující:"/>

        <TextBlock x:Name="AutoInfoTextBlock"
                   Grid.Row="0"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap" />

        <TextBlock Text="DPH:" FontSize="14" Margin="0,5"/>
        <ComboBox x:Name="BrandComboBox" DisplayMemberPath="Tax" SelectedValuePath="Id" Margin="0,5" Width="Auto"/>

        <TextBlock Text="Název modelu:" FontSize="14" Margin="0,5"/>
        <TextBlock x:Name="ModelNazevTextBlock"  Margin="0,5" Width="Auto"/>
        <TextBlock Text="Cena:" FontSize="14" Margin="0,5"/>
        <TextBox x:Name="CostTextBox"  Margin="0,5" Width="Auto"/>

    </StackPanel>
</UserControl>
