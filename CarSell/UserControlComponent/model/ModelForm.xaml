<UserControl x:Class="CarSell.UserControlComponent.ModelForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSell.UserControlComponent" >

    <StackPanel Margin="10">
        <TextBlock Text="Značka:" FontSize="14" Margin="0,5"/>
        <ComboBox x:Name="BrandComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,5" Width="Auto"/>

        <TextBlock Text="Název modelu:" FontSize="14" Margin="0,5"/>
        <TextBox x:Name="ModelNazevTextBox" Margin="0,5" Width="Auto"/>
    </StackPanel>
</UserControl>
