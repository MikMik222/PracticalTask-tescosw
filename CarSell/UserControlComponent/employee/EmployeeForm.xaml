<UserControl x:Class="CarSell.UserControlComponent.EmployeeForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSell.UserControlComponent">

    <StackPanel>
        <TextBlock Text="Prodejce:" Grid.Row="0" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox x:Name="SellerComboBox" Grid.Row="0" Grid.Column="1" Margin="10"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>
        <TextBlock Text="Jméno:" Grid.Row="1" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

        <TextBlock Text="Příjmení:" Grid.Row="2" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox x:Name="SurnameTextBox" Grid.Row="2" Grid.Column="1" Margin="0,5"/>
    </StackPanel>
</UserControl>
