<UserControl x:Class="CarSell.UserControlComponent.ParametrForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSell.UserControlComponent" >

    <StackPanel Margin="10">

        <TextBlock x:Name="AutoInfoTextBlock"
                   Grid.Row="0"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap" />

        <TextBlock Text="Název parametru:"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Hodnota:"/>
        <TextBox x:Name="ValueTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Jednotka (volitelné):"/>
        <TextBox x:Name="UnitTextBox" Margin="0,0,0,5"/>

    </StackPanel>
</UserControl>
